{
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-order": [
      {
        "groupName": "Display Properties",
        "emptyLineBefore": "always",
        "properties": [
          "width",
          "height",
          "display",
          "position",
          "top",
          "right",
          "bottom",
          "left"
        ]
      },
      {
        "groupName": "Flex Properties",
        "emptyLineBefore": "always",
        "properties": [
          "flex",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "align-items",
          "align-self",
          "justify-content"
        ]
      },
      {
        "groupName": "Grid Properties",
        "emptyLineBefore": "always",
        "properties": [
          "grid-template-columns",
          "grid-template-rows",
          "grid-area",
          "grid-gap",
          "justify-items",
          "align-content"
        ]
      },
      {
        "groupName": "Margin and Padding",
        "emptyLineBefore": "always",
        "properties": [
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left"
        ]
      },
      {
        "groupName": "Text Properties",
        "emptyLineBefore": "always",
        "properties": [
          "font-size",
          "font-weight",
          "line-height",
          "text-align",
          "text-transform",
          "color"
        ]
      },
      {
        "groupName": "Background Properties",
        "emptyLineBefore": "always",
        "properties": [
          "background",
          "background-color",
          "background-image",
          "background-position",
          "background-size"
        ]
      },
      {
        "groupName": "Color Properties",
        "emptyLineBefore": "always",
        "properties": ["color", "border-color", "outline-color"]
      },
      {
        "groupName": "Shadow Properties",
        "emptyLineBefore": "always",
        "properties": ["box-shadow", "text-shadow"]
      },
      {
        "groupName": "Transforms and Transitions",
        "emptyLineBefore": "always",
        "properties": ["transform", "transition", "animation"]
      },
      {
        "groupName": "Media Queries",
        "emptyLineBefore": "always",
        "properties": ["@media"]
      }
    ]
  }
}
